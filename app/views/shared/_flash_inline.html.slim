- flash.each do |type, message|
  - bg_class = { notice: "bg-emerald-50 text-emerald-700 dark:bg-emerald-500/10 dark:text-emerald-400", success: "bg-emerald-50 text-emerald-700 dark:bg-emerald-500/10 dark:text-emerald-400", alert: "bg-red-50 text-red-700 dark:bg-red-500/10 dark:text-red-400", error: "bg-red-50 text-red-700 dark:bg-red-500/10 dark:text-red-400" }.fetch(type.to_sym, "bg-zinc-100 text-zinc-700 dark:bg-zinc-800 dark:text-zinc-400")
  .rounded-lg.px-3.py-2.text-sm class=bg_class
    = message
